<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:id="@+id/card_view_layout"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:id="@+id/recipe_item_image_view"
                android:layout_height="250dp" />

            <TextView
                android:id="@+id/recipe_item_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="30dp"
                android:background="#E91E63"
                android:textColor="#fff"
                android:layout_below="@id/recipe_item_image_view"
                android:text="recipe_item_title_text_view" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/recipe_item_publisher_text_view"
                android:layout_height="30dp"
                android:layout_below="@id/recipe_item_title_text_view"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="16dp"
                android:background="#911840"
                android:textColor="#fff"
                android:text="recipe_item_publisher_text_view" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/recipe_item_social_rank_text_view"
                android:layout_below="@id/recipe_item_publisher_text_view"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="10dp"
                android:background="#911840"
                android:textColor="#fff"
                android:text="recipe_item_social_rank_text_view" />



        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>